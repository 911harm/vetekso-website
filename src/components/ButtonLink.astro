---
interface Props {
  href: string;
  label: string;
  btnClass: string;
}

const { label, btnClass } = Astro.props;
---

<a
  {...Astro.props}
  class={`${btnClass} w-[90%] max-w-60 max-h-11 py-2 px-4 md:text-2xl flex justify-center items-center hover:text-white font-semibold rounded-[5px] outline outline-[3px] outline-transparent hover:outline-white cursor-pointer`}
  >{label}</a
>

<style lang="scss">
  a {
    box-shadow: 0px 4px 10px 0px #00000040;
    transition: all 0.2s ease-in-out;
    &:hover {
      background: transparent;
    }
  }
</style>

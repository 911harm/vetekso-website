---
import Logo from "./Logo";
import IconButton from "./IconButton";
import NavMenu from "./NavMenu";
import { NAV_LINKS } from "../utils/consts";
---

<header class="bg-blue fixed top-0 left-0 w-full z-50">
  <nav
    class="max-w-5xl container mx-auto p-4 flex justify-between items-center"
  >
    <Logo client:load />
    <IconButton client:load />
    <div class="space-x-8 w-full hidden md:block md:w-auto" id="navbar-default">
      {
        NAV_LINKS.map(({ label, pathname }) => (
          <a
            href={pathname}
            class="text-white text-xl transition-colors duration-200 hover:text-fuchsia-100"
          >
            {label}
          </a>
        ))
      }
    </div>
    <NavMenu client:load />
  </nav>
</header>

<style lang="scss">
  header {
    box-shadow: 4px 0px 10px 0px #00000040;

    nav {
      height: 100px;
    }
  }
</style>

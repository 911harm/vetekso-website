---
interface Props {
  href: string;
  label: string;
  btnClasses: string;
}

const { label, btnClasses } = Astro.props;
---

<a
  {...Astro.props}
  class={`
  ${btnClasses} w-[90%] max-w-56 h-[44px] py-2 px-4 
  flex justify-center items-center 
  md:text-2xl font-semibold rounded-[5px] 
  cursor-pointer shadow-[0px_4px_10px_0px_rgba(0,0,0,0.25)]
  `}>{label}</a
>

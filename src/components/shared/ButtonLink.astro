---
interface Props {
  href: string;
  label: string;
  btnClasses: string;
}

const { label, btnClasses } = Astro.props;
---

<a
  {...Astro.props}
  class={`
  ${btnClasses} w-[90%] max-w-56 max-h-11 py-2 px-4 
  flex justify-center items-center 
  md:text-2xl font-semibold rounded-[5px] 
  cursor-pointer
  `}>{label}</a
>

<style lang="scss">
  a {
    box-shadow: 0px 4px 10px 0px #00000040;
  }
</style>

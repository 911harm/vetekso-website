---
import Header from "../components/shared/Header.astro";
import Footer from "../components/shared/Footer.astro";
import "@fontsource-variable/podkova";

interface Props {
  frontmatter: {
    title: string;
  };
}

const { title } = Astro.props.frontmatter;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <main>
      <main>
        <section class="bg-white">
          <div class="max-w-6xl px-6 sm:px-12 py-10 m-auto">
            <slot />
          </div>
        </section>
      </main>
      <Footer />
    </main>
  </body>

  <style is:global lang="scss">
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }
    html,
    body {
      min-height: 100vh;
      font-family: "Podkova Variable", system-ui, sans-serif;
      background: linear-gradient(141.19deg, #00105b 13.59%, #841b71 86.5%);
      color: #000000;
    }
    main {
      min-height: 100vh;
      margin-top: 100px;
    }

    h1 {
      font-weight: 600;
      font-size: 32px;
      text-align: center;
      margin-bottom: 20px;
      background-image: linear-gradient(90deg, #841b71 0%, #00105b 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    h2 {
      font-weight: 700;
      font-size: 16px;
    }

    a {
      @media (min-width: 400px) {
        font-size: 20px;
      }
    }

    p > a {
      font-size: 16px;
      font-weight: 600;
    }

    ul li::before {
      content: "â€¢ ";
    }

    p,
    ul {
      margin-bottom: 16px;
    }
  </style>
</html>

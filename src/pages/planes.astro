<style lang="scss">
  section {
    @media (min-height: 825px) {
      height: 100vh;
    }
    @media (min-height: 1024px) {
      p {
        margin-bottom: 60px;
      }
      a {
        margin-top: 60px;
      }
    }
    @media (min-height: 1200px) {
      p {
        margin-bottom: 100px;
      }
